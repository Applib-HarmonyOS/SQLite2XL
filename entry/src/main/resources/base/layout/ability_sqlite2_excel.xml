<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$ohos:color:id_color_background"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <TextField
            ohos:id="$+id:edt_user"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text_size="30fp"
            ohos:weight="1"
            ohos:hint="$string:hint_enter_name"
            ohos:hint_color="$color:colorPrimaryDark"
            ohos:text_color="$color:colorPrimaryDark"
            ohos:text_input_type="pattern_text"/>
        <TextField
            ohos:id="$+id:edt_c_no"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text_size="30fp"
            ohos:weight="1"
            ohos:hint="$string:hint_enter_phone_number"
            ohos:hint_color="$color:colorPrimaryDark"
            ohos:text_color="$color:colorPrimaryDark"
            ohos:text_input_type="pattern_number"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="35vp"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:btn_save_user"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text_size="30fp"
            ohos:background_element="$color:colorPrimary"
            ohos:text="$string:save"
            ohos:text_color="$color:colorAccent"
            ohos:weight="1"/>
        <Button
            ohos:id="$+id:btn_export"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_size="30fp"
            ohos:background_element="$color:colorPrimary"
            ohos:left_margin="5vp"
            ohos:text="$string:export"
            ohos:text_color="$color:colorAccent"/>
        <Button
            ohos:id="$+id:btn_export_with_exclude"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_size="30fp"
            ohos:background_element="$color:colorPrimary"
            ohos:left_margin="5vp"
            ohos:text="$string:export_exclude"
            ohos:text_color="$color:colorAccent"/>
    </DirectionalLayout>
    <ListContainer
        ohos:id="$+id:lv_users"
        ohos:height="match_content"
        ohos:width="match_parent"/>
</DirectionalLayout>
